<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.jayce.vexis.foundation.viewmodel.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_role"
            android:textSize="40sp"
            android:textColor="#A600FF00"
            android:paddingBottom="@dimen/registerTitlePadding"
            android:paddingTop="@dimen/registerTitlePadding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="spread"
            app:layout_constraintTop_toBottomOf="@+id/registerTitle"
            app:layout_constraintBottom_toTopOf="@id/registerBtn">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/accountTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/account"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/nicknameTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/nickname"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountTv"/>
                <TextView
                    android:id="@+id/passwordTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/input_password"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nicknameTv"/>
                <TextView
                    android:id="@+id/confirmPasswordTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/password_confirm"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordTv"/>
                <TextView
                    android:id="@+id/birthdayTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/birthday"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTv"/>
                <TextView
                    android:id="@+id/sexTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/sex"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birthdayTv"/>
                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/email"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sexTv"/>
                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/phone_number"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailTv"/>
                <TextView
                    android:id="@+id/addressTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center"
                    android:text="@string/address"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phoneTv"/>
                <TextView
                    android:id="@+id/introductionTv"
                    android:layout_width="@dimen/labelWidth"
                    android:layout_height="wrap_content"
                    android:textColor="@color/label"
                    android:textSize="@dimen/label"
                    android:gravity="center_horizontal"
                    android:text="@string/self_intro"
                    android:layout_marginTop="@dimen/registerMargin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressTv"/>
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:barrierDirection="end"
                    app:constraint_referenced_ids="introductionTv,addressTv,phoneTv,emailTv,accountTv,nicknameTv,passwordTv,confirmPasswordTv,birthdayTv,sexTv"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/roleId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:text="@={vm.roleId}"
                    android:textColor="@{vm.isRoleIdValid ? 0xFF00FF00 : 0xFF000000}"
                    android:hint="@string/this_message_login_id"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:inputType="text"
                    app:showIcon="@{vm.showRoleIdIcon}"
                    app:iconText="@{vm.roleIdHint}"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@id/accountTv"
                    app:layout_constraintBottom_toBottomOf="@id/accountTv"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:inputType="text"
                    android:textColor="@{vm.isNicknameValid ? 0xFF00FF00 : 0xFF000000}"
                    android:text="@={vm.nickname}"
                    app:showIcon="@{vm.showNicknameIcon}"
                    app:iconText="@{vm.nickNameHint}"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/roleId"
                    app:layout_constraintTop_toTopOf="@id/nicknameTv"
                    app:layout_constraintBottom_toBottomOf="@id/nicknameTv"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:text="@={vm.password}"
                    app:showIcon="@{vm.showPasswordIcon}"
                    app:iconText="@{vm.passwordHint}"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/passwordTv"
                    app:layout_constraintBottom_toBottomOf="@id/passwordTv"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/confirmPassword"
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:text="@={vm.confirmPassword}"
                    app:showIcon="@{vm.showConfirmPasswordIcon}"
                    app:iconText="@{vm.confirmPasswordHint}"
                    android:importantForAutofill="no"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/confirmPasswordTv"
                    app:layout_constraintBottom_toBottomOf="@+id/confirmPasswordTv"/>
                <LinearLayout
                    android:id="@+id/birthdayLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/birthdayTv"
                    app:layout_constraintBottom_toBottomOf="@+id/birthdayTv">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/corner_16"
                        android:textSize="@dimen/content"
                        android:gravity="center"
                        android:text="@{vm.birthdayYear}"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/corner_16"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginEnd="@dimen/margin"
                        android:textSize="@dimen/content"
                        android:gravity="center"
                        android:text="@{vm.birthdayMonth}"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/corner_16"
                        android:textSize="@dimen/content"
                        android:gravity="center"
                        android:text="@{vm.birthdayDay}"/>
                </LinearLayout>
                <com.jayce.vexis.foundation.view.block.DefaultSpinner
                    android:id="@+id/sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_16"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/sexTv"
                    app:layout_constraintBottom_toBottomOf="@+id/sexTv"
                    android:selectedItemPosition="@={vm.sexSelectPosition}"/>
                <LinearLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/emailTv"
                    app:layout_constraintBottom_toBottomOf="@+id/emailTv">
                    <com.jayce.vexis.foundation.view.block.HintView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/choose_fill"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"
                        android:paddingEnd="0dp"
                        android:layout_marginEnd="@dimen/margin"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:text="@{vm.emailContent}"/>
                    <com.jayce.vexis.foundation.view.block.DefaultSpinner
                        android:id="@+id/emailPostfix"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/editview_border"
                        android:textSize="4sp"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:gravity="center"
                        android:focusable="true"
                        android:selectedItemPosition="@={vm.emailPostfixSelectPosition}"/>
                </LinearLayout>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:hint="@string/choose_fill"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/phoneTv"
                    app:layout_constraintBottom_toBottomOf="@+id/phoneTv"
                    android:text="@{vm.phoneNumber}"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:hint="@string/choose_fill"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/addressTv"
                    app:layout_constraintBottom_toBottomOf="@+id/addressTv"
                    android:text="@{vm.address}"/>
                <com.jayce.vexis.foundation.view.block.HintView
                    android:id="@+id/bio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/content"
                    android:background="@drawable/corner_8"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:paddingStart="@dimen/margin"
                    android:paddingEnd="0dp"
                    android:gravity="top|start"
                    android:hint="@string/choose_fill"
                    android:lines="8"
                    android:inputType="textMultiLine"
                    app:layout_constraintStart_toStartOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="@+id/introductionTv"
                    android:text="@={vm.bio}"
                    app:showIcon="@{vm.showBioIcon}"
                    app:iconText="@{vm.bioHint}"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideLine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/register"
            android:textSize="24sp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/register_button_bg"
            android:enabled="@{vm.isRegisterButtonClickable}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>