<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="NestedWeights">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="创建账户"
            android:textSize="40sp"
            android:textColor="#A600FF00"
            android:layout_marginBottom="16dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="账户"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"/>
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:hint="此信息为登录凭证，请牢记..."
                        android:textColorHint="@color/hint"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nameHintLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="账户名长度为6至18位"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nameHIntExist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="用户名已存在，请重试"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="昵称"/>
                    <EditText
                        android:id="@+id/nickname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nicknameHintLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="@string/nickname_hint"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/nicknameHintValid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="昵称不可包含空格！"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="输入密码"/>
                    <EditText
                        android:id="@+id/password"
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/passwordHintLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="密码长度为6-18位"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="确认密码"/>
                    <EditText
                        android:id="@+id/confirmPassword"
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/passwordDismatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/hintText"
                        android:textSize="@dimen/hint"
                        android:text="两次密码不一致，请修改..."
                        android:paddingStart="@dimen/margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/viewMargin">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="生日"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <Spinner
                            android:id="@+id/birthdayYear"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corner_16"
                            android:textSize="@dimen/content"/>
                        <Spinner
                            android:id="@+id/birthdayMonth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corner_16"
                            android:layout_marginStart="@dimen/margin"
                            android:layout_marginEnd="@dimen/margin"
                            android:textSize="@dimen/content"/>
                        <Spinner
                            android:id="@+id/birthdayDay"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/corner_16"
                            android:textSize="@dimen/content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/viewMargin">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="性别"/>
                    <Spinner
                        android:id="@+id/sex"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/corner_16"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/viewMargin"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="邮件"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/choose_fill"
                            android:textSize="@dimen/content"
                            android:background="@drawable/corner_8"
                            android:layout_marginTop="@dimen/margin"
                            android:layout_marginBottom="@dimen/margin"
                            android:paddingStart="@dimen/margin"
                            android:layout_marginEnd="@dimen/margin"
                            android:textColorHint="@color/hint"/>
                        <Spinner
                            android:id="@+id/emailPostfix"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/editview_border"
                            android:textSize="4sp"
                            android:layout_marginTop="@dimen/margin"
                            android:layout_marginBottom="@dimen/margin"
                            android:gravity="center"
                            android:focusable="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/viewMargin">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="手机号"/>
                    <EditText
                        android:id="@+id/phone"
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"
                        android:textColorHint="@color/hint"
                        android:hint="@string/choose_fill" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/viewMargin">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center"
                        android:text="地址"/>
                    <EditText
                        android:id="@+id/address"
                        android:inputType="textPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"
                        android:textColorHint="@color/hint"
                        android:hint="@string/choose_fill"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/viewMargin">
                    <TextView
                        android:layout_width="@dimen/labelWidth"
                        android:layout_height="match_parent"
                        android:textColor="@color/label"
                        android:textSize="@dimen/label"
                        android:gravity="center_horizontal"
                        android:text="自我介绍"/>
                    <EditText
                        android:id="@+id/selfIntroduction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/content"
                        android:background="@drawable/corner_8"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginBottom="@dimen/margin"
                        android:paddingStart="@dimen/margin"
                        android:textColorHint="@color/hint"
                        android:gravity="top|start"
                        android:hint="@string/choose_fill"
                        android:lines="8"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/selfIntoLength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0/200"
                    android:gravity="end"
                    android:textSize="@dimen/hint"/>
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/registerHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/hintText"
            android:textSize="@dimen/hint"
            android:visibility="visible"
            android:layout_gravity="bottom"
            android:text="@string/all_info_check"
            android:background="#0D0000FF"/>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/register"
            android:textSize="24sp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/corner_24" />
    </LinearLayout>
</layout>
