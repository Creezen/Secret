<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="账户创建"
        android:textSize="40dp"
        android:textColor="#00ff00"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="账户"/>
                <com.LJW.secret.CustomComponent.MyEditText
                    android:id="@+id/createAccountName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:hint="此信息为登录凭证，请牢记..."
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountNameHintLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#ff0000"
                    android:text="账户名长度为6至18位"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountNameHIntExist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#ff0000"
                    android:text="用户名已存在，请重试"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="昵称"/>
                <com.LJW.secret.CustomComponent.MyEditText
                    android:id="@+id/createAccountNickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountNicknameHintLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#ff0000"
                    android:text="昵称长度最少一位，最长不超过八位！"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountNicknameHintValid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:visibility="gone"
                    android:textColor="#ff0000"
                    android:text="昵称不可包含空格！"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="输入密码"/>
                <com.LJW.secret.CustomComponent.MyEditText
                    android:id="@+id/createAccountPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="25dp"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountPasswordHintLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#ff0000"
                    android:text="密码长度为6-18位"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="确认密码"/>
                <com.LJW.secret.CustomComponent.MyEditText
                    android:id="@+id/createAccountConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="25dp"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/createAccountPasswordDismatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="#ff0000"
                    android:text="两次密码不一致，请修改..."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="生日"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <Spinner
                        android:id="@+id/createAccountBirthdayYear"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/createAccountBirthdayMonth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/createAccountBirthdayDay"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="性别"
                    android:layout_weight="1"/>
                <Spinner
                    android:id="@+id/createAccountSex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="邮件"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <EditText
                        android:id="@+id/createAccountEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="11"
                        android:textSize="25dp"
                        android:hint="可选填" />
                    <Spinner
                        android:id="@+id/createAccountEmailPostfix"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="手机号"/>
                <EditText
                    android:id="@+id/createAccountPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="25dp"
                    android:hint="可选填" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="地址"/>
                <EditText
                    android:id="@+id/createAccountAddress"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="可选填"
                    android:textSize="25dp"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#0000ff"
                    android:textSize="20dp"
                    android:gravity="top|center"
                    android:text="自我介绍"/>
                <com.LJW.secret.CustomComponent.MyEditText
                    android:id="@+id/createAccountSelfIntroduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:hint="可选填"
                    android:gravity="left|top"
                    android:lines="8"
                    android:textSize="25dp"
                    android:background="@drawable/editview_border"/>
            </LinearLayout>
            <TextView
                android:id="@+id/createAccountSelfIntoLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/200"
                android:gravity="right"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/createAccountRegisterHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ff0000"
        android:visibility="visible"
        android:layout_gravity="bottom"
        android:text="有关键信息未正确填写，请检查！！！"/>
    <Button
        android:id="@+id/createAccountRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="点击注册"/>
</LinearLayout>